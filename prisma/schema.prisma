generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "sqlite"
}

model Paper {
  id            String   @id @default(uuid())
  arxivId       String   @unique
  arxivUrl      String
  title         String?
  authors       String?
  abstract      String?
  publishedDate String?
  status        String   @default("pending")
  processedAt   DateTime?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  references    Reference[] @relation("PaperReferences")
  citedBy       Reference[] @relation("PaperCitedBy")
}

model Reference {
  id          String   @id @default(uuid())
  paperId     String
  referenceId String
  createdAt   DateTime @default(now())

  paper       Paper     @relation("PaperReferences", fields: [paperId], references: [id], onDelete: Cascade)
  reference   Paper     @relation("PaperCitedBy", fields: [referenceId], references: [id], onDelete: Cascade)

  @@unique([paperId, referenceId])
  @@index([paperId])
  @@index([referenceId])
}
